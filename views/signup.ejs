<%- include('partials/_header') %>

<body id="signup-body">
<%- include('partials/_navigation') %>

    <div class="container">
        <div class="ortala signup-bg" style="color: rgb(6, 0, 0);">

          <% if(flashMesaj){%>
            <% if(flashMesaj.hata){%>
              <div class="alert alert-danger"> <%= flashMesaj.hata %></div>  
            <%}%>
          <%}%>
            <form action="users/signup" method="POST">
              <div class="mb-3">
                <label for="exampleInputName" class="form-label">İsim Soyisim</label>
                <input type="text" name="name"class="form-control">
                <div id="emailHelp" class="form-text">Deneme Amaçlıdır Kişisel Verilerinizi Girmeyiniz</div>
              </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" name="email"class="form-control">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" name="password" class="form-control">
                </div>
                <div class="mb-3 text-center form-button">
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
              </form>
        </div>
    </div>

    <%- include('partials/_footer') %>
